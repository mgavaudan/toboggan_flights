<h1>Dodo flights</h1>
<%= form_for @flight, url: {action: "create"}, html: {class: "create_flight"} do |f| %>
  <%= f.text_field :beginning_airport %><br>
  <%= f.text_field :ending_airport %><br>
  <%= f.date_field :search_end %><br>
  <%= f.label :price %>
  <%= f.number_field :price %>
  <%= f.submit :id => "submit" %>
<% end %>